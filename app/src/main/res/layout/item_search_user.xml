<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
<ImageView
    android:src="@drawable/bg_dest_tab_worldmap"
    android:layout_gravity="center"
    android:id="@+id/searchitem_user_image"
    android:background="@drawable/circleiamge"
    android:layout_width="50dp"
    android:layout_height="50dp" />
    <LinearLayout
        android:padding="10dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:padding="10dp"
            android:id="@+id/searchitem_user_textname"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <LinearLayout
            android:padding="10dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/searchitem_user_texttitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />
            <TextView
                android:id="@+id/searchitem_user_textcontoy"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />
            <TextView
                android:id="@+id/searchitem_user_textcitys"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />

            </LinearLayout>



        </LinearLayout>

</LinearLayout>