<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
<ImageView
    android:padding="5dp"
    android:id="@+id/search_mudidi_item_imageview"
    android:layout_gravity="center"
    android:layout_width="100dp"
    android:layout_height="100dp" />
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/search_mudidi_item_textview1"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/search_mudidi_item_textview2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/search_mudidi_item_textview3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <TextView
            android:gravity="right"
            android:id="@+id/search_mudidi_item_textview4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/search_mudidi_item_textview5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />




        </LinearLayout>


</LinearLayout>